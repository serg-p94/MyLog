<?xml version="1.0" encoding="utf-8" ?>

<resources>
  <style name="Text" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="Text.Normal.Dark" parent="@style/Text">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Text.Light.Dark" parent="@style/Text">
    <item name="android:textColor">@color/grayLight</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="Text.Accent.Dark" parent="@style/Text.Normal.Dark">
    <item name="android:textStyle">bold</item>
  </style>
</resources>