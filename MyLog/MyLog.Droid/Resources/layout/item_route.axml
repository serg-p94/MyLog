<?xml version="1.0" encoding="utf-8"?>

<controls.CardViewX
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  style="@style/Card"
  app:MvxBind="Selected IsSelected;">
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
      style="@style/Text.Accent"
      android:layout_gravity="center_vertical"
      app:MvxBind="Text Name;" />

    <View style="@style/Divider" />

    <TextView
      style="@style/Text.Normal"
      android:layout_gravity="center_vertical"
      app:MvxBind="Text 'Расстояние: ' + DistanceString(Distance);" />
    <TextView
      style="@style/Text.Normal"
      android:layout_gravity="center_vertical"
      app:MvxBind="Text 'Время: ' + TimeString(Time);" />
    <TextView
      style="@style/Text.Normal"
      android:layout_gravity="center_vertical"
      app:MvxBind="Text 'Скорость: ' + SpeedString(Speed);" />
    <TextView
      style="@style/Text.Normal"
      android:layout_gravity="center_vertical"
      app:MvxBind="Text 'Остановки: ' + StopsCount;" />
  </LinearLayout>
</controls.CardViewX>
